<?xml version="1.0"?>
<overlay id="easycrypt" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

		<script src="chrome://easycrypt/content/easycrypt.js" />
		<menupopup id="menu_ToolsPopup">
			<menuitem label="Encrypt" key="easycrypt-run-key" oncommand="easycrypt_run()"/>
		</menupopup>

		<keyset>
			<key id="easycrypt-run-key" modifiers="accel alt shift" key="L" oncommand="easycrypt_run()"/>
		</keyset>

		<popup id="contentAreaContextMenu">
		  <menuitem id="encrypt-show" label="Encrypt (EasyCrypt)" oncommand="easycrypt.encrypt_show()">
		  </menuitem>
		</popup>

		<popup id="contentAreaContextMenu">
		  <menuitem id="decrypt-show" label="Decrypt (EasyCrypt)" oncommand="easycrypt.decrypt_show()">
		  </menuitem>
		</popup>


		<hbox>
		  <panel id="easycryptEncryptpanel" style="visibility:visible">
			 <vbox align="start">
				<textbox id="easycrypt-textfield" multiline="true"/>
				<button id="easycrypt-button"  label="encrypt"/>
			 </vbox>
		  </panel>
		</hbox>

		<hbox>
		  <panel id="easycryptDecryptpanel" style="visibility:visible">
			 <vbox align="start">
				<textbox id="easycrypt-cleartext-textfield" multiline="true"/>
			 </vbox>
		  </panel>
		</hbox>

</overlay>

